<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/progress_dialog">


    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/content_loading_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?android:attr/progressBarStyle"
        android:padding="14dp"/>
    
    
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold on for a moment..."
        android:textSize="18sp"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@id/content_loading_progress_bar"
        app:layout_constraintTop_toTopOf="@id/content_loading_progress_bar"
        app:layout_constraintBottom_toBottomOf="@id/content_loading_progress_bar"
        android:padding="24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>