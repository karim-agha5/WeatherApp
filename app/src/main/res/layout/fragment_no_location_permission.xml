<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.mainapp.NoLocationPermissionFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.mainapp.NoLocationPermissionFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/iv_location_permission_denied"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/location_error"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/tv_location_permission_denied_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/unable_to_find_location_error_message"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/iv_location_permission_denied"
        />


    <Button
        android:id="@+id/btn_retry_fetch_location_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retry"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/red_shade_3"
        app:layout_constraintTop_toBottomOf="@id/tv_location_permission_denied_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>