<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.AddFavoriteLocationsFragment"
    android:padding="16dp"
    android:background="@color/white_97_brightness">



    <ImageView
        android:id="@+id/iv_favorite_weather"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/favorite_location"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>



    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick Your Favorite Locations"
        android:textSize="26sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/iv_favorite_weather"
        android:layout_marginTop="38dp"
        />



    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keep up with current and future weather conditions of your
favorite places and your loved one's."
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginTop="38dp"
        />




    <Button
        android:id="@+id/btn_onbaording_lets_get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Get Started"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/black"
        android:backgroundTint="@color/white_97_brightness"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>


